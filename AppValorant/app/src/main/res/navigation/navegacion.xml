<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacion"
    app:startDestination="@id/listaFragment">

    <fragment
        android:id="@+id/listaFragment"
        android:name="com.example.appvalorant.ListaFragment"
        android:label="Lista Personajes"
        tools:layout="@layout/fragment_lista">
        <action
            android:id="@+id/action_listaFragment_to_personajeFragment"
            app:destination="@id/personajeFragment" />
    </fragment>
    <fragment
        android:id="@+id/personajeFragment"
        android:name="com.example.appvalorant.personajeFragment"
        android:label="fragment_personaje"
        tools:layout="@layout/fragment_personaje" />
</navigation>